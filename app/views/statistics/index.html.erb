<h1>Listing statistics</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Month</th>
    <th>Light max</th>
    <th>Medium</th>
    <th>Heavy</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statistics.each do |statistic| %>
  <tr>
    <td><%= statistic.Year %></td>
    <td><%= statistic.Month %></td>
    <td><%= statistic.Light_max %></td>
    <td><%= statistic.Medium %></td>
    <td><%= statistic.Heavy %></td>
    <td><%= link_to 'Show', statistic %></td>
    <td><%= link_to 'Edit', edit_statistic_path(statistic) %></td>
    <td><%= link_to 'Destroy', statistic, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

