<h1>Listing cars</h1>

<table>
  <tr>
    <th>N</th>
    <th>Tonnage</th>
    <th>Picture</th>
    <th>Price for 1 hour</th>
    <th>Id driver</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.N %></td>
    <td><%= car.Tonnage %></td>
    <td><%= car.Picture %></td>
    <td><%= car.Price_for_1_hour %></td>
    <td><%= car.ID_driver %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

